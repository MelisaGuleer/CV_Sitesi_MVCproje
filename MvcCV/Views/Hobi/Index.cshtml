@using MvcCV.Models.Entity
@model List<TblHobiler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="5" class="form-control" name="Açıklama1">@item.Açıklama1</textarea>
        <br />
        <label>Açıklama 2</label>
        <textarea rows="5" class="form-control" name="Açıklama2">@item.Açıklama2</textarea>
    }
    <br />
    <button class="btn btn-warning">Güncelle</button>
</form>